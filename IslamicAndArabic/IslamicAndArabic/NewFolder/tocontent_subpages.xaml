    <ContentPage x:Name="page1" >

        <StackLayout BackgroundColor="#EEEEEE " >
            <ProgressBar x:Name="pbar4" IsVisible="True" Progress="0.664"/>
            <Label Text="Q1. Python is a:" Padding="20, 25, 20, 45" FontSize="Large"/>
            <StackLayout Padding="20"  VerticalOptions="CenterAndExpand">
                <StackLayout Spacing="12" BackgroundColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" Padding="25" WidthRequest="400">
                    <StackLayout Orientation="Horizontal" x:Name="first_opt_stac" >
                        <CheckBox x:Name="first_chbox" CheckedChanged="first_chbox_CheckedChanged"/>
                        <Label  Text="A Reptile Animal" FontSize="Medium" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" x:Name="sec_opt_stac">
                        <CheckBox x:Name="sec_chbox" CheckedChanged="sec_chbox_CheckedChanged"/>
                        <Label Text="Development Environment" FontSize="Medium" VerticalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" x:Name="third_opt_stac">
                        <CheckBox x:Name="third_chbox" CheckedChanged="third_chbox_CheckedChanged"/>
                        <Label Text="Programming Language" FontSize="Medium" VerticalOptions="Center"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            <StackLayout Padding="0, 0, 10, 10">
                <Button Text="Check"  VerticalOptions="End" x:Name="en_pg_2"
                        HorizontalOptions="EndAndExpand" Clicked="en_pg_2_Clicked"/>
            </StackLayout>
            

        </StackLayout>
      

    </ContentPage>
